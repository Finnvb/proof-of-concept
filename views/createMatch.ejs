<%- include('./partials/head') %>


<body>

    <section class="container">

        <h1 class="header">Create a match</h1>
        <form class="container" action="#" id="myForm">

            <label for="activity">Select activity</label>
            <select name="activities" id="activity">
                <option value="Ping Pong">Ping Pong</option>
                <option value="Basketball">Basketball</option>
                <option value=" Football">Football</option>
                <option value="Tennis">Tennis</option>
                <option value="Hockey">Hockey</option>
                <option value="Volleyball">Volleyball</option>
            </select>


            <label for="time">total minutes</label>
          
            <input type="number" id="time" name="time" min="1" max="30" value="0">


            <label for="team1Name">Team 1 name</label>
            <input type="text" name="team1Name" id="team1Name" autocomplete="off">

            <label for="team2Name">Team 2 name</label>
            <input type="text" name="team2Name" id="team2Name" autocomplete="off">

            <input class="button" id="submit-btn" type='submit' value="Start">

        </form>
    </section>
</body>


