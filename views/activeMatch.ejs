<form action="/match%>" id="team1Plus" method="post">

    <div class="scoreContainer">
        <input type="text" class="score" id="scoreTeam1" value="0"> </input>
        <p id="dash"> - </p>
        <input type="text" class="score" id="scoreTeam2" value="0">  </input>
    </div>

    <input type="hidden" name="matchId" id="matchId" value="<%= scoreData[scoreData.length - 1].matchId %>" >
<div>
    <button id="button-team1" type="submit" form="team1Plus"><img  src="/assets/plusPoint.svg" alt="minus point"></button>
    <button id="button-team2" type="submit" form="team1Plus"><img  src="/assets/plusPoint.svg" alt="minus point"></button>
</div>



<div>
    <button id="minus-button-team1" type="submit" form="team1Plus"><img  src="/assets/minus.svg" alt="minus point"></button>
    <button id="minus-button-team2" type="submit" form="team1Plus"><img  src="/assets/minus.svg" alt="minus point"></button>
</div>


</form>


</section>





<script src="/scripts/match.js"></script>
</body>

