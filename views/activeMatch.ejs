<%- include('./partials/head') %>

<body>

    <section class="match-container">
<img src="/assets/time.svg" alt="Time">

<h1 id="timer"> <%- scoreData[scoreData.length - 1].speeltijd %> </h1>


<div class="scoreContainer">

    <h2> Team <%- scoreData[scoreData.length - 1].team1 %> </h2>
    <p id="dash"> VS </p>
    <h2>Team <%- scoreData[scoreData.length - 1].team2 %></h2>

</div>

<div>

    <p> <%- scoreData[scoreData.length - 1].playersTeam1 %> </p>

    <p> <%- scoreData[scoreData.length - 1].playersTeam2 %> </p>

</div>

